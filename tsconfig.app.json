{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue"
	],
	"exclude": [
		"src/**/__tests__/*"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"composite": true,
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	}
}
